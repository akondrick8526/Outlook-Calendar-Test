@{
    ViewBag.Title = "Home Page";
}

<button class=" btn btn-primary" style="margin-top: 20px;" onclick="location.href = '@Url.Action("OauthRedirect", "Home")'">Sign In</button>

<button class=" btn btn-primary" style="margin-top: 20px; margin-left: 10px;" onclick="location.href = '@Url.Action("RefreshToken", "Oauth")'">Refresh Access Token</button>

<button class=" btn btn-primary" style="margin-top: 20px; margin-left: 10px;" onclick="location.href = '@Url.Action("AdminOauthRedirect", "Home")'">Admin Sign In</button>

<div style="margin-top: 50px;">
    <form method="post" action="Calendar/CreateEvent">
        <div class="row" style="margin=10px;">
            <label for="Summary" class="col-sm-3"> Subject:</label>
            <input type="text" class=" col-sm-1 form-control" name="Subject" value="" autocomplete="off" />
        </div>
        <div class="row" style="margin=10px;">
            <label for="Description" class="col-sm-3"> Content:</label>
            <input type="datetime" class=" col-sm-1 form-control" name="Body.Content" value="" autocomplete="off" />
        </div>
        <div class="row" style="margin=10px;">
            <label for="Start.datetime" class="col-sm-3"> Start Date Time:</label>
            <input type="datetime" class=" col-sm-1 form-control" name="Start.datetime" value="" autocomplete="off" />
        </div>
        <div class="row" style="margin=10px;">
            <label for="End.datetime" class="col-sm-3"> End Date Time:</label>
            <input type="datetime" class=" col-sm-1 form-control" name="End.datetime" value="" autocomplete="off" />
        </div>
        <div class="row col-sm-3" style="margin:10px;">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>